@{
    bool IsAuthenticated = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Identity App</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            @if(IsAuthenticated)
            {
                <a asp-action="Index" asp-controller="User" class="navbar-brand" >User List</a>
            }
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @if(!IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a  asp-action="Register" asp-controller="User" class="nav-link">Register </a>
                        </li>
                        <li  class="nav-item">
                            <a asp-action="SignIn" asp-controller="User" class="nav-link">Sign In</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-action="LogOut" asp-controller="User" class="nav-link" >Sign Out</a>
                        </li> 
                        <li class="nav-item">
                            <a asp-action="GetUserInfo" asp-controller="User" class="nav-link" >Profile Information</a>
                        </li> 
                        <li class="nav-item">
                            <a asp-action="UserUpdate" asp-controller="User" class="nav-link" >Update Profile</a>
                        </li> 
                    }
                </ul>
            </div>
        </div>
    </nav>
    </header>
    <section class="container mt-2">
    <div>
        @RenderBody()
    </div>
    </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
